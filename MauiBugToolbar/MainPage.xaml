<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBugToolbar.MainPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="AAA" Order="Primary" />
        <ToolbarItem Text="BBB" Order="Primary" />
        <ToolbarItem Text="CCC" Order="Secondary" />
        <ToolbarItem Text="DDD" Order="Secondary" />
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout
                Spacing="25"
                Padding="30,0"
                VerticalOptions="Center">

                <Label
                    Text="If MAUI works, you will see two primary items and two secondary items in the toolbar."
                    SemanticProperties.HeadingLevel="Level1"
                    FontSize="32"
                    HorizontalOptions="Center" />

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
